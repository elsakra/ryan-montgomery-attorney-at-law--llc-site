---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  try {
    const programs = await getCollection('programs');
    return programs.map((program) => ({
      params: { slug: program.slug },
      props: { program },
    }));
  } catch {
    // If the collection doesn't exist yet (or is empty), skip generating this route.
    return [];
  }
}

const { program } = Astro.props;
const { Content } = await program.render();
---

<BaseLayout title={program.data.title} description={program.data.description}>
  <!-- Hero Section -->
  <section class="relative py-32 lg:py-48 bg-burgundy-800">
    <div class="max-w-4xl mx-auto px-6 lg:px-12">
      <div>
        <p class="text-sm uppercase tracking-widest text-burgundy-200 mb-4">
          {program.data.department || 'Academics'}
        </p>
        <h1 class="hero-headline text-display-xl text-white">
          {program.data.title}
        </h1>
        <p class="mt-6 text-xl text-burgundy-100">
          {program.data.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Program Content -->
  <section class="py-20 lg:py-32 bg-cream-50">
    <article class="max-w-3xl mx-auto px-6 lg:px-12">
      <div class="prose prose-lg prose-burgundy max-w-none">
        <Content />
      </div>
      
      <!-- Back Link -->
      <div class="mt-12 pt-8 border-t border-slate-200">
        <a 
          href="/academics"
          class="inline-flex items-center gap-2 text-burgundy-700 font-semibold hover:text-burgundy-900 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
          </svg>
          Back to Academics
        </a>
      </div>
    </article>
  </section>
</BaseLayout>
