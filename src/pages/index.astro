---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import EventsCalendar from '../components/EventsCalendar.astro';
import siteData from '../data/site.json';
import { getCollection } from 'astro:content';

const { company, hero, sections, socialProof } = siteData;
const academics = sections?.academics;
const admissions = sections?.admissions;
const campusLife = sections?.campusLife;
const newsSection = sections?.news;
const cta = sections?.cta;

// Get latest news
let latestNews = [];
try {
  const allNews = await getCollection('news');
  latestNews = allNews
    .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
    .slice(0, 3);
} catch (e) {
  // Collection may not exist yet
}
---

<BaseLayout>
  <!-- Hero Section - Full-bleed Photography -->
  <section class="relative min-h-screen flex flex-col">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src={hero.backgroundImage || "/images/hero-student.jpg"}
        alt={`Students at ${company.name}`}
        class="w-full h-full object-cover"
      />
      <div class="hero-overlay absolute inset-0"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative flex-1 flex flex-col justify-end px-6 lg:px-12 pb-12 lg:pb-20">
      <h1 class="hero-headline text-hero text-white max-w-4xl">
        {hero?.headline || company?.name || 'Welcome'}
      </h1>
      <p class="mt-6 text-xl lg:text-2xl text-white/90 max-w-2xl font-light">
        {hero?.tagline || ''}
      </p>
      {hero.ctaButton && (
        <div class="mt-8">
          <a 
            href={hero.ctaButton.href}
            class="inline-flex items-center gap-2 px-8 py-4 bg-white text-burgundy-800 font-semibold rounded-full hover:bg-cream-100 transition-colors"
          >
            {hero.ctaButton.label}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      )}
        </div>
        
    <!-- Scroll Indicator -->
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
          </div>
  </section>

  <!-- Stats Section -->
  {socialProof?.stats && (
    <section class="py-16 lg:py-24 bg-burgundy-800">
      <div class="max-w-7xl mx-auto px-6 lg:px-12">
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
          {socialProof.stats.map((stat, index) => (
            <div class="text-center reveal" style={`animation-delay: ${index * 0.1}s`}>
              <div class="text-4xl lg:text-5xl font-display text-white">{stat.value}</div>
              <div class="mt-2 text-burgundy-200 text-sm uppercase tracking-wider">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- About Preview -->
  <section class="py-20 lg:py-32 bg-cream-50">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <div class="reveal">
          <p class="text-sm uppercase tracking-widest text-burgundy-600 mb-4">About {company.name}</p>
          <h2 class="section-headline text-display-lg text-charcoal-900">
            {sections?.about?.subheadline || 'Our Story'}
          </h2>
          <p class="mt-6 text-lg text-charcoal-600 leading-relaxed">
            {sections?.about?.content || ''}
          </p>
          <div class="mt-8">
            <a 
              href="/about" 
              class="inline-flex items-center gap-2 text-burgundy-700 font-semibold hover:text-burgundy-900 transition-colors"
            >
              Learn More About Us
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
            </a>
          </div>
        </div>
        {sections?.about?.image && (
          <div class="reveal" style="animation-delay: 0.2s">
            <img 
              src={sections.about.image}
              alt={`${company.name} Campus`}
              class="w-full rounded-2xl shadow-xl"
            />
          </div>
        )}
        </div>
      </div>
    </section>

  <!-- Values Section -->
  {sections?.about?.values && sections.about.values.length > 0 && (
    <section class="py-20 lg:py-32 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-12">
        <div class="text-center mb-16 reveal">
          <p class="text-sm uppercase tracking-widest text-burgundy-600 mb-4">Our Values</p>
          <h2 class="section-headline text-display-lg text-charcoal-900">
            What We Stand For
            </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {sections.about.values.map((value, index) => (
            <div class="reveal" style={`animation-delay: ${index * 0.1}s`}>
              <div class="w-12 h-12 flex items-center justify-center rounded-full bg-burgundy-100 text-burgundy-700 font-display text-xl mb-4">
                {index + 1}
              </div>
              <h3 class="text-xl font-display text-charcoal-900 mb-2">{value.title}</h3>
              <p class="text-charcoal-600">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Academics Preview -->
  <section class="py-20 lg:py-32 bg-charcoal-900 text-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
        <div class="reveal">
          <p class="text-sm uppercase tracking-widest text-burgundy-400 mb-4">Academics</p>
          <h2 class="section-headline text-display-lg text-white">
            {academics?.headline || 'Academics'}
          </h2>
          <p class="mt-6 text-lg text-slate-300 leading-relaxed">
            {academics?.content || ''}
          </p>
          <div class="mt-8">
            <a 
              href="/academics" 
              class="inline-flex items-center gap-2 px-6 py-3 border border-white text-white font-semibold rounded-full hover:bg-white hover:text-charcoal-900 transition-colors"
            >
              Explore Programs
            </a>
          </div>
        </div>
        
        <div class="reveal" style="animation-delay: 0.2s">
          {academics?.departments && academics.departments.length > 0 && (
            <div class="grid grid-cols-2 gap-4">
              {academics.departments.map((dept) => (
                <div class="p-4 border border-charcoal-700 rounded-lg hover:border-burgundy-500 transition-colors">
                  <span class="text-white font-medium">{dept}</span>
                </div>
              ))}
          </div>
        )}
        </div>
      </div>
    </div>
  </section>

  <!-- Admissions CTA -->
  <section class="py-20 lg:py-32 bg-burgundy-800 text-white">
    <div class="max-w-4xl mx-auto px-6 lg:px-12 text-center">
      <div class="reveal">
        <p class="text-sm uppercase tracking-widest text-burgundy-200 mb-4">Admissions</p>
        <h2 class="section-headline text-display-lg text-white">
          {admissions?.headline || 'Admissions'}
          </h2>
        <p class="mt-6 text-xl text-burgundy-100 max-w-2xl mx-auto">
          {admissions?.content || ''}
        </p>
        
        {admissions?.steps && admissions.steps.length > 0 && (
          <div class="mt-12 grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {admissions.steps.map((step, index) => (
              <div class="text-center reveal" style={`animation-delay: ${index * 0.1}s`}>
                <div class="w-10 h-10 flex items-center justify-center mx-auto rounded-full border-2 border-burgundy-400 text-burgundy-200 font-semibold text-sm mb-3">
                  {step.step}
                </div>
                <h3 class="font-semibold text-white">{step.title}</h3>
                <p class="mt-1 text-sm text-burgundy-200">{step.description}</p>
              </div>
            ))}
          </div>
        )}
        
        <div class="mt-12">
          <a 
            href="/admissions" 
            class="inline-flex items-center gap-2 px-8 py-4 bg-white text-burgundy-800 font-semibold rounded-full hover:bg-cream-100 transition-colors"
          >
            Start Your Application
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Campus Life Preview -->
  <section class="py-20 lg:py-32 bg-cream-50">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="text-center mb-16 reveal">
        <p class="text-sm uppercase tracking-widest text-burgundy-600 mb-4">Campus Life</p>
        <h2 class="section-headline text-display-lg text-charcoal-900">
          {campusLife?.headline || 'Campus Life'}
        </h2>
        <p class="mt-4 text-lg text-charcoal-600 max-w-2xl mx-auto">
          {campusLife?.content || ''}
        </p>
      </div>
      
      {campusLife?.features && campusLife.features.length > 0 && (
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {campusLife.features.map((feature, index) => (
            <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow reveal" style={`animation-delay: ${index * 0.1}s`}>
              <h3 class="text-lg font-display text-charcoal-900 mb-2">{feature.title}</h3>
              <p class="text-charcoal-600 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>
      )}
      
      <div class="text-center mt-12">
        <a 
          href="/campus-life" 
          class="inline-flex items-center gap-2 text-burgundy-700 font-semibold hover:text-burgundy-900 transition-colors"
        >
          Explore Campus Life
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Events Calendar Section -->
  <EventsCalendar 
    headline="Upcoming Events"
    description="Join us for these upcoming campus events and activities"
  />

  <!-- News Section -->
  <section class="py-20 lg:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
      <div class="flex items-end justify-between mb-12">
        <div class="reveal">
          <p class="text-sm uppercase tracking-widest text-burgundy-600 mb-4">News & Events</p>
          <h2 class="section-headline text-display-lg text-charcoal-900">
            {newsSection?.headline || 'News'}
          </h2>
        </div>
        <a 
          href="/news" 
          class="hidden md:inline-flex items-center gap-2 text-burgundy-700 font-semibold hover:text-burgundy-900 transition-colors"
        >
          {newsSection?.viewAllLabel || 'View All News'}
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
      
      {latestNews.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {latestNews.map((article, index) => (
            <article class="group reveal" style={`animation-delay: ${index * 0.1}s`}>
              <a href={`/news/${article.slug}`}>
                {article.data.image && (
                  <img 
                    src={article.data.image}
                    alt={article.data.title}
                    class="w-full aspect-[4/3] object-cover rounded-xl mb-4 group-hover:opacity-90 transition-opacity"
                  />
                )}
                <p class="text-sm text-burgundy-600 mb-2">
                  {new Date(article.data.date).toLocaleDateString('en-US', { 
                    month: 'long', 
                    day: 'numeric', 
                    year: 'numeric' 
                  })}
                </p>
                <h3 class="text-xl font-display text-charcoal-900 group-hover:text-burgundy-700 transition-colors">
                  {article.data.title}
                </h3>
                {article.data.excerpt && (
                  <p class="mt-2 text-charcoal-600 line-clamp-2">{article.data.excerpt}</p>
                )}
              </a>
            </article>
          ))}
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Placeholder news items -->
          <article class="reveal">
            <div class="w-full aspect-[4/3] bg-slate-200 rounded-xl mb-4"></div>
            <p class="text-sm text-burgundy-600 mb-2">January 15, 2025</p>
            <h3 class="text-xl font-display text-charcoal-900">Spring Semester Begins</h3>
            <p class="mt-2 text-charcoal-600">Welcome back to campus as we begin an exciting new semester.</p>
          </article>
          <article class="reveal" style="animation-delay: 0.1s">
            <div class="w-full aspect-[4/3] bg-slate-200 rounded-xl mb-4"></div>
            <p class="text-sm text-burgundy-600 mb-2">January 10, 2025</p>
            <h3 class="text-xl font-display text-charcoal-900">Winter Athletics Update</h3>
            <p class="mt-2 text-charcoal-600">Our winter teams are off to a strong start this season.</p>
          </article>
          <article class="reveal" style="animation-delay: 0.2s">
            <div class="w-full aspect-[4/3] bg-slate-200 rounded-xl mb-4"></div>
            <p class="text-sm text-burgundy-600 mb-2">January 5, 2025</p>
            <h3 class="text-xl font-display text-charcoal-900">Alumni Spotlight: Class of 2015</h3>
            <p class="mt-2 text-charcoal-600">Celebrating the achievements of our graduates ten years later.</p>
          </article>
        </div>
        )}
      
      <div class="text-center mt-8 md:hidden">
        <a 
          href="/news" 
          class="inline-flex items-center gap-2 text-burgundy-700 font-semibold hover:text-burgundy-900 transition-colors"
        >
          {newsSection?.viewAllLabel || 'View All News'}
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-20 lg:py-32 bg-charcoal-900">
    <div class="max-w-4xl mx-auto px-6 lg:px-12 text-center">
      <div class="reveal">
        <h2 class="section-headline text-display-lg text-white">
          {cta?.headline || 'Ready to learn more?'}
        </h2>
        <p class="mt-6 text-xl text-slate-300">
          {cta?.description || ''}
        </p>
        <div class="mt-8">
          <a 
            href={cta?.buttonHref || '/contact'}
            class="inline-flex items-center gap-2 px-8 py-4 bg-burgundy-600 text-white font-semibold rounded-full hover:bg-burgundy-700 transition-colors"
          >
            {cta?.buttonLabel || 'Contact Us'}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
      </div>
    </section>
</BaseLayout>
