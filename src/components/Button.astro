---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  type?: 'button' | 'submit' | 'reset';
}

const { 
  href, 
  variant = 'primary', 
  size = 'md',
  class: className = '',
  type = 'button'
} = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-semibold rounded-full transition-all duration-200';

const sizeClasses = {
  sm: 'px-4 py-2 text-sm gap-1.5',
  md: 'px-6 py-3 text-base gap-2',
  lg: 'px-8 py-4 text-lg gap-2.5'
};

const variantClasses = {
  primary: 'bg-burgundy-700 text-white hover:bg-burgundy-800 focus:ring-2 focus:ring-burgundy-500 focus:ring-offset-2',
  secondary: 'bg-charcoal-900 text-white hover:bg-charcoal-800 focus:ring-2 focus:ring-charcoal-500 focus:ring-offset-2',
  outline: 'border-2 border-burgundy-700 text-burgundy-700 hover:bg-burgundy-50 focus:ring-2 focus:ring-burgundy-500 focus:ring-offset-2',
  ghost: 'text-burgundy-700 hover:bg-burgundy-50 focus:ring-2 focus:ring-burgundy-500'
};

const classes = `${baseClasses} ${sizeClasses[size]} ${variantClasses[variant]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
